@prefix biolink: <https://w3id.org/biolink/vocab/> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .
@prefix RO: <http://purl.obolibrary.org/obo/RO_> .
@prefix mvikg: <http://example.org/mvikg/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix dcmitype: <http://purl.org/dc/dcmitype/> .

# If a Sample has a habitat/location/biome, it CAN ONLY be a GOLD biome
# (i.e., one of: AtomicElement, Engineered, Environmental, Host-associated, or their subclasses)
sosa:Sample rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty mvikg:has_habitat ;
    owl:allValuesFrom mvikg:Biome
] .

# If a Sample has a developmental stage, it CAN ONLY be a mvikg:DevelopmentalStage
sosa:Sample rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty mvikg:has_developmental_stage ;
    owl:allValuesFrom mvikg:DevelopmentalStage
] .


# If a Sample is part of something, it CAN ONLY be a Dataset
sosa:Sample rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty dcterms:isPartOf ;
    owl:allValuesFrom dcmitype:Dataset
] .

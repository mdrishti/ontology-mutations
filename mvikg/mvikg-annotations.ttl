# Custom MVIKG classes
mvikg:DevelopmentalStage rdf:type owl:Class ;
                       rdfs:comment "A developmental stage is a stage corresponding to a stage in bacteria's  growth. e.g.: exponential, lag.";
                       rdfs:label "Developmental stage" ;
    		       skos:definition "Represents a specific point or period in an organism's life cycle" ;
                       skos:closeMatch <http://www.ebi.ac.uk/efo/EFO_0000399> .


mvikg:Biome a owl:Class ;
    rdfs:label "GOLD Biome" ;
    rdfs:comment "We recommend any biome class from the GOLD ontology" .
